<!doctype html>
<html>
<head>
    <title>Student List</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1>Form</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <div class="col-sm-6">
          <form action="/messages" method="POST" class="row justify-content-center mb-4">
            <div class="col-10 mb-3">
              <label for="firstName">First Name</label>
              <input class="form-control" type="text" placeholder="Enter Your First Name" name="firstName">
            </div>
            <div class="col-10 mb-3">
              <label for="lastName">Last Name</label>
              <input class="form-control" type="text" placeholder="Enter Your Last Name" name="lastName">
            </div>
            <div class="col-10 mb-3">
              <label for="Roll">Roll</label>
              <input class="form-control" type="text" placeholder="What is your Roll" name="roll">
            </div>
            <div class="col-8 mb3">
              <button class="btn btn-success add-btn" type="submit">Submit</button>
            </div>
          </form>
        </div>

        <div class="col-sm-6">
          <div class="col-10 mt-5">
            <table class="table table-striped table-dark">
              <thead>
                <tr>
                  <th>First Name</th>
                  <th>Last Name</th>
                  <th>Roll</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody class="peoples-list">
                <% for(var i=0; i<messages.length; i++) { %>
                  <tr class="tabla">
                    <td><%= messages[i].firstName %></td>
                    <td><%= messages[i].lastName %></td>
                    <td><%= messages[i].roll %></td>
                    <td>
                      <a href="" class="btn-warning btn sm-edit">Edit</a>
                      <a href="" class="btn-warning btn sm-delete">Delete</a>
                    </td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>

    </div>

</div>

<script src="main.js"></script>

</body>
</html>